---
const { title = "Dokumentasi", description = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <style>
      :root {
        --bg: #ffffff;
        --fg: #222222;
        --accent: #007acc;
        --max-width: 800px;
        --font-sans: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        --font-mono: SFMono-Regular, Consolas, Liberation Mono, Menlo, monospace;
      }

      * {
        box-sizing: border-box;
      }

      body {
        background-color: var(--bg);
        color: var(--fg);
        font-family: var(--font-sans);
        margin: 0;
        padding: 3rem 2rem 4rem 2rem;
        max-width: var(--max-width);
        margin-left: auto;
        margin-right: auto;
        line-height: 1.75;
        font-weight: 400;
      }

      header {
        border-bottom: 3px solid #eee;
        padding-bottom: 1rem;
        margin-bottom: 3rem;
      }

      h1 {
        font-weight: 700;
        font-size: 2.8rem;
        margin: 0 0 0.4rem 0;
        color: var(--fg);
        letter-spacing: -0.03em;
      }

      h2 {
        font-weight: 600;
        font-size: 2rem;
        margin: 2.5rem 0 1rem 0;
        border-bottom: 1px solid #ddd;
        padding-bottom: 0.3rem;
        color: var(--fg);
      }

      h3 {
        font-weight: 600;
        font-size: 1.4rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--fg);
      }

      p {
        font-size: 1.1rem;
        margin: 1.2rem 0;
      }

      a {
        color: var(--accent);
        text-decoration: underline;
        font-weight: 600;
      }

      a:hover,
      a:focus {
        color: #005a9e;
        text-decoration: none;
      }

      nav a {
        margin-right: 1.5rem;
        font-weight: 700;
        font-size: 1rem;
        color: var(--accent);
        text-decoration: none;
        border-bottom: 2px solid transparent;
        padding-bottom: 2px;
        transition: border-color 0.3s ease;
      }

      nav a:hover,
      nav a:focus {
        border-color: var(--accent);
      }

      ul {
        padding-left: 1.2rem;
        margin: 1rem 0 1.5rem 0;
        font-size: 1.1rem;
      }

      li {
        margin-bottom: 0.6rem;
      }

      pre {
        background-color: #f6f8fa;
        padding: 1rem 1.2rem;
        border-radius: 6px;
        font-family: var(--font-mono);
        font-size: 0.9rem;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid #ddd;
      }

      code {
        background-color: #eaeaea;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: var(--font-mono);
        font-size: 0.95rem;
        font-weight: 500;
      }

      blockquote {
        border-left: 4px solid #ddd;
        margin: 2rem 0;
        padding-left: 1rem;
        color: #666;
        font-style: italic;
        background-color: #fafafa;
        border-radius: 4px;
      }

      hr {
        border: none;
        border-top: 1px solid #eee;
        margin: 3rem 0;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
